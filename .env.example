# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Webhook security secret (create your own random string)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Supabase Database Configuration
# Get these from Supabase Dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cloudinary Media Storage Configuration
# Get these from Cloudinary Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Admin Dashboard Password
# Set a strong password for admin login
ADMIN_PASSWORD=your_secure_admin_password

# Google Cloud Integration (for Sheets/Drive/Calendar features)
# Service Account credentials (JSON string from Google Cloud Console)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account"...}

# Google Sheets integration
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id

# Google Drive integration
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Google Calendar integration
# Get Calendar ID from Google Calendar settings (usually your email or custom calendar ID)
GOOGLE_CALENDAR_ID=your-email@gmail.com
